<div class="btn-group">
    <a class="btn btn-primary btn-mini" href="<?php echo $this->url('default/id', array(
        'controller' => 'item',
        'action' => 'add-relation',
        'id' => $item->getId()
    )); ?>">
        Add comment
    </a>
</div>
