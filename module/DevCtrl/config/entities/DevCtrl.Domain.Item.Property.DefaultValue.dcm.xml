<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DevCtrl\Domain\Item\Property\DefaultValue" table="item_type_property_defaults">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="properties_autoinc" allocation-size="100" initial-value="1" />
        </id>

        <one-to-one field="itemTypeProperty" target-entity="DevCtrl\Domain\Item\Type\TypeProperty">
            <join-column name="item_type_property_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="value" target-entity="DevCtrl\Domain\Item\Property\Value\Value">
            <join-column name="item_type_property_value_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>