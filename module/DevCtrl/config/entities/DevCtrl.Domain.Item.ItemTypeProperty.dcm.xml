<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DevCtrl\Domain\Item\ItemTypeProperty" table="item_item_properties">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="itemitemproperty_autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="required" column="required" type="boolean" nullable="false" unique="false" />

        <one-to-one field="itemType" target-entity="DevCtrl\Domain\Item\ItemType">
            <join-column name="item_type_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="property" target-entity="DevCtrl\Domain\Item\Property">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="item_property_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>