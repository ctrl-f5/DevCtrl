<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DevCtrl\Domain\Project" table="projects">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="project_autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="name" column="name" type="string" length="255" nullable="false" unique="false" />
        <field name="state" column="state" type="string" length="255" nullable="false" unique="false" />
        <field name="dateCreated" column="date_created" type="datetime" nullable="false" unique="false" />
        <field name="dateDue" column="date_due" type="datetime" nullable="true" unique="false" />


        <one-to-one field="parentProject" target-entity="Auth\Domain\User">
            <join-column name="parent_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="createdByUser" target-entity="Auth\Domain\User">
            <join-column name="created_by" referenced-column-name="id" />
        </one-to-one>

        <one-to-many field="linkedUsers" target-entity="DevCtrl\Domain\ProjectUserLink" mapped-by="project" />

        <one-to-many field="items" target-entity="DevCtrl\Domain\Item\Item" mapped-by="project">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>