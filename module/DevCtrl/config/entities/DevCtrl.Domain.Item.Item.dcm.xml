<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DevCtrl\Domain\Item\Item" table="items">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="items_autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="title" column="title" type="string" length="255" nullable="false" unique="false" />
        <field name="description" column="description" type="text" nullable="true" unique="false" />

        <one-to-one field="itemType" target-entity="DevCtrl\Domain\Item\ItemType">
            <join-column name="item_type_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="createdByUser" target-entity="DevCtrl\Domain\User">
            <join-column name="created_by_user_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="project" target-entity="DevCtrl\Domain\Project">
            <join-column name="project_id" referenced-column-name="id" />
        </one-to-one>

        <many-to-many field="assignedUsers" target-entity="DevCtrl\Domain\User">
            <join-table name="item_users">
                <join-columns>
                    <join-column name="item_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="propertyValues" target-entity="DevCtrl\Domain\Item\ItemPropertyValue" mapped-by="item">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>