<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DevCtrl\Domain\Item\PropertyValue" table="item_property_values">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="itempropertyvalues_autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="value" column="value" type="string" length="255" nullable="false" unique="false" />

        <one-to-one field="item" target-entity="DevCtrl\Domain\Item\Item">
            <join-column name="item_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="property" target-entity="DevCtrl\Domain\Item\Property\Property">
            <join-column name="item_property_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>