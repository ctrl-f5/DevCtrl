<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DevCtrl\Domain\ProjectUserLink" table="project_users">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="users_autoinc" allocation-size="100" initial-value="1" />
        </id>

        <field name="level" column="level" type="string" length="255" nullable="false" unique="false" />

        <many-to-one field="user" target-entity="DevCtrl\Domain\User">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="project" target-entity="DevCtrl\Domain\Project">
            <join-column name="project_id" referenced-column-name="id" />
        </many-to-one>

    </entity>
</doctrine-mapping>